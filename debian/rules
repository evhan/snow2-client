#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# %:
# 	dh $@ 

clean:
	make clean

build:
	make SCHEME=chicken build

binary:
	# nothing

binary-indep: build install

install:
	mkdir -p $(CURDIR)/debian/snow2-client/usr/bin
	mkdir -p $(CURDIR)/debian/snow2-client/usr/share
	$(MAKE) DESTDIR=$(CURDIR)/debian/snow2-client SCHEME=chicken install
